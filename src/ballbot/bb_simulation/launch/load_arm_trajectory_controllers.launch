<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <!-- load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find tuda_turtlebot3_gazebo)/config/arm_trajectory_controllers.yaml" command="load" />
  <rosparam file="$(find tuda_turtlebot3_gazebo)/config/gripper_trajectory_controllers.yaml" command="load" />

  <!-- load the controllers -->
  <node name="arm_controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen"
    args="arm_trajectory_controller
          gripper_trajectory_controller
          --shutdown-timeout 3" />
</launch>
